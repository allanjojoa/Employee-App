<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.allan.android.employee.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total "
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":0"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" "
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="MCA"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="B2B"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Total"
                    android:textStyle="bold"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FL"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/fl_mca_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/fl_b2b_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/fl_total_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TX"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/tx_mca_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tx_b2b_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tx_total_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CA"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/ca_mca_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ca_b2b_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ca_total_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail: "
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="20sp" />
        <TextView
            android:paddingTop="20dp"
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="sans-serif"
            android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="OnLogin"
        android:background="@drawable/ripple_effect"
        android:text="Fetch" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:layout_toRightOf="@id/refresh_button"
        android:layout_alignParentBottom="true"
        android:onClick="setView"
        android:text="Refresh" />
</RelativeLayout>